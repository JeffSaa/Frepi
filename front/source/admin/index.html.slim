header
	h2 Manejo de Usuarios

h3 Administradores

section.actions
	button.ui.green.create.button
		i.plus.icon
		|Agregar Administrador

section.content
	table.admins.ui.celled.table
		thead
			tr
				th ID
				th CC
				th Nombres
				th Apellidos
				th Teléfono
				th E-mail
				th Acciones
		tbody data-bind="foreach: currentAdmins, visible: !shouldShowAdminsAlert()"
			tr
				td data-bind="text: $data.id"
				td data-bind="text: $data.identification"
				td data-bind="text: $data.name"
				td data-bind="text: $data.lastName"
				td data-bind="text: $data.phoneNumber"
				td data-bind="text: $data.email"
				td
					i.bordered.inverted.blue.pencil.link.icon data-bind="click: $root.showUpdate"
					i.bordered.inverted.red.remove.user.link.icon data-bind="click: $root.showDelete"
		tbody data-bind="visible: shouldShowAdminsAlert"
				tr
					td.alert.box colspan="7"
						h4.ui.centered.header data-bind="text: adminsAlertText"
		tfoot
			tr
				th colspan="7"
					.ui.right.floated.pagination.menu
						a.icon.item data-bind="click: setPrevAdminPage"
							i.left.chevron.icon
						.pages.item data-bind="foreach: adminsPages.showablePages"
								a.item data-bind="text: $data.num, click: $root.fetchAdminsPage"
						a.icon.item data-bind="click: setNextAdminPage"
							i.right.chevron.icon

	h3 Clientes
	table.users.ui.celled.table
		thead
			tr
				th ID
				th CC
				th Nombres
				th Apellidos
				th Teléfono
				th E-mail
				th Dirección
				th # Pedidos
				th Fiel
				th Activo
				th Acciones
		tbody data-bind="foreach: currentUsers, visible: !shouldShowUsersAlert()"
			tr
				td data-bind="text: $data.id"
				td data-bind="text: $data.identification"
				td data-bind="text: $data.name"
				td data-bind="text: $data.lastName"
				td data-bind="text: $data.phoneNumber"
				td data-bind="text: $data.email"
				td data-bind="text: $data.address"
				td data-bind="text: $data.counterOrders"
				td data-bind="text: $root.activeTranslation($data.loyalCostumer)"
				td data-bind="text: $root.activeTranslation($data.active)"
				td
					i.bordered.inverted.blue.pencil.link.icon data-bind="click: $root.showUpdate"
					i.bordered.inverted.red.remove.user.link.icon data-bind="click: $root.showDelete"
		tbody data-bind="visible: shouldShowUsersAlert"
				tr
					td.alert.box colspan="11"
						h4.ui.centered.header data-bind="text: usersAlertText"
		tfoot
			tr
				th colspan="11"
					.ui.right.floated.pagination.menu
						a.icon.item data-bind="click: setPrevUserPage"
							i.left.chevron.icon
						.pages.item data-bind="foreach: usersPages.showablePages"
								a.item data-bind="text: $data.num, click: $root.fetchUsersPage"
						a.icon.item data-bind="click: setNextUserPage"
							i.right.chevron.icon

