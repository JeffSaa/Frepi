.ui.small.admin.delete.modal
	.header Eliminar Usuario
	.content
		p
			|Está a punto de eliminar a
			strong data-bind="text: chosenUser.name"
			|, ¿Desea hacerlo?
	.actions
		.ui.cancel.button
			i.remove.icon
			|No
		.ui.green.button data-bind="click: deleteUser"
			i.check.icon
			|Si
.ui.small.admin.create.modal
	i.close.icon
	.header Agregar Administrador
	.content
		form.ui.form data-bind="submit: createAdmin"
			.field
				label Nombre
				.two.fields
					.field
						input type="text" name="firstName" placeholder="Nombres"
					.field
						input type="text" name="lastName" placeholder="Apellidos"
			.two.fields
				.field
					label CC
					input type="text" name="cc" placeholder="Cédula de ciudadanía"
				.field
					label Dirección
					input type="text" name="address" placeholder="Dirección"
			.two.fields
				.field
					label Teléfono
					input type="text" name="phoneNumber" placeholder="Teléfono"
				.field
					label Correo electrónico
					input type="text" name="email" placeholder="Correo electrónico"
			.field
				label Contraseña
				.two.fields
					.field
						input type="password" name="password" placeholder="Contraseña"
					.field
						input type="password" name="confirmationPassword" placeholder="Confirme contraseña"
			.buttons-to-right
				.ui.cancel.button Cancelar
				button.ui.labeled.green.submit.icon.button type="submit"
					|Crear Admin
					i.checkmark.icon
