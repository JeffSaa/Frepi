.ui.small.admin.delete.modal
	.header Eliminar producto
	.content		
		p
			|Está a punto de eliminar la sucursal 
			strong data-bind="text: chosenSucursal.name"
			|, al hacerlo se eliminará toda la información asociada a ella, como ordenes o productos ¿Desea hacerlo?
	.actions
		.ui.cancel.button
			i.remove.icon
			|No
		.ui.green.button data-bind="click: deleteSucursal"
			i.check.icon
			|Si
.ui.small.admin.create.modal
	i.close.icon
	.header Agregar sucursal
	.content
		form.ui.form data-bind="submit: createSucursal"
			.field
				label Nombre
				input type="text" name="name" placeholder="Nombre"
			.two.fields
				.field
					label Dirección
					input type="text" name="address" placeholder="Dirección"
				.field
					label Teléfono
					input type="text" name="phoneNumber" placeholder="Teléfono contacto"
			.ui.divider
			.field
				label Administrador
				.two.fields
					.field
						input type="text" name="managerFullName" placeholder="Nombre"
					.field
						input type="text" name="managerPhoneNumber" placeholder="Teléfono"
			.buttons-to-right
				.ui.cancel.button Cancelar
				button.ui.labeled.green.submit.icon.button type="submit"
					|Crear Sucursal
					i.checkmark.icon
.ui.small.admin.update.modal
	i.close.icon
	.header Editar sucursal
	.content
		form.ui.form data-bind="submit: updateSucursal"
			.field
				label Nombre
				input type="text" name="name" placeholder="Nombre"
			.two.fields
				.field
					label Dirección
					input type="text" name="address" placeholder="Dirección"
				.field
					label Teléfono
					input type="text" name="phoneNumber" placeholder="Teléfono contacto"
			.ui.divider
			.field
				label Administrador
				.two.fields
					.field
						input type="text" name="managerFullName" placeholder="Nombre"
					.field
						input type="text" name="managerPhoneNumber" placeholder="Teléfono"
			.buttons-to-right
				.ui.cancel.button Cancelar
				button.ui.labeled.green.submit.icon.button type="submit"
					|Editar Sucursal
					i.checkmark.icon

header
	h2 Sucursales

section.actions
	button.ui.green.create.button
		i.plus.icon
		|Agregar sucursal

section.content
	table.ui.celled.sucursals.table
		thead
			tr
				th ID
				th Nombre
				th Dirección
				th Teléfono
				th Manager
				th Tel Manager
				th Acciones
		tbody data-bind="foreach: currentSucursals, visible: !shouldShowSucursalsAlert()"
			tr
				td data-bind="text: $data.id"
				td data-bind="text: $data.name"
				td data-bind="text: $data.address"
				td data-bind="text: $data.phoneNumber"
				td data-bind="text: $data.managerFullName"
				td data-bind="text: $data.managerPhoneNumber"
				td
					i.bordered.inverted.blue.pencil.link.icon data-bind="click: $root.showUpdate"
					i.bordered.inverted.red.trash.link.icon data-bind="click: $root.showDelete"
		tbody data-bind="visible: shouldShowSucursalsAlert"
				tr 
					td.alert.box colspan="7"
						h4.ui.centered.header data-bind="text: sucursalsAlertText"
		tfoot
			tr
				th colspan="7"
					.ui.right.floated.pagination.menu
						a.icon.item
							i.left.chevron.icon
						.pages.item data-bind="foreach: sucursalsPages"
							a.item data-bind="text: $data.num, click: $root.fetchSucursalsPage"
						a.icon.item
							i.right.chevron.icon

script src="../javascripts/viewmodels/admin/sucursals.js"