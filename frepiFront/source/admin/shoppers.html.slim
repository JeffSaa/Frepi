.ui.small.admin.delete.modal
	.header Eliminar Shopper
	.content
		p
			|Está a punto de eliminar a
			strong data-bind="text: chosenShopper.name"
			|, ¿Desea hacerlo?
	.actions
		.ui.cancel.button
			i.remove.icon
			|No
		.ui.green.button data-bind="click: deleteShopper"
			i.check.icon
			|Si
.ui.small.admin.create.modal
	i.close.icon
	.header Agregar Shopper
	.content
		form.ui.form data-bind="submit: createShopper"
			.field
				label Nombre
				.two.fields
					.field
						input type="text" name="firstName" placeholder="Nombres"
					.field
						input type="text" name="lastName" placeholder="Apellidos"
			.ui.divider
			.two.fields
				.field
					label CC
					input type="text" name="cc" placeholder="Cédula de ciudadanía"
				.field
					label Teléfono
					input type="text" name="phoneNumber" placeholder="Teléfono"
			.two.fields
				.field
					label Correo electrónico
					input type="text" name="email" placeholder="Correo electrónico"
				.field
					label Tipo Shopper
					.ui.selection.dropdown
						input type="hidden" name="shopperType"
						.default.text Tipo
						i.dropdown.icon
						.menu
							.item data-value="IN-STORE"
								i.male.icon
								|In-Store
							.item data-value="DELIVERY"
								i.motorcycle.icon
								|Delivery
			.buttons-to-right
				.ui.cancel.button Cancelar
				button.ui.labeled.green.submit.icon.button type="submit"
					|Crear Shopper
					i.checkmark.icon

