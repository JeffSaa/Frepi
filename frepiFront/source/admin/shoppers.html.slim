header
	h2 Shoppers

section.actions
	button.ui.green.create.button
		i.plus.icon
		|Agregar Shopper

section.content
	table.ui.celled.shoppers.table
		thead
			tr
				th ID
				th CC
				th Nombres
				th Apellidos
				th Teléfono
				th E-mail
				th Tipo
				th Acciones
		tbody data-bind="foreach: currentShoppers, visible: !shouldShowShoppersAlert()"
			tr
				td data-bind="text: $data.id"
				td data-bind="text: $data.identification"
				td data-bind="text: $data.firstName"
				td data-bind="text: $data.lastName"
				td data-bind="text: $data.phoneNumber"
				td data-bind="text: $data.email"
				td data-bind="text: $data.shopperType"
				td
					i.bordered.inverted.blue.pencil.link.icon data-bind="click: $root.showUpdate"
					i.bordered.inverted.red.remove.user.link.icon data-bind="click: $root.showDelete"
		tbody data-bind="visible: shouldShowShoppersAlert"
				tr
					td.alert.box colspan="8"
						h4.ui.centered.header data-bind="text: shoppersAlertText"
		tfoot
			tr
				th colspan="8"
					.ui.right.floated.pagination.menu
						a.icon.item
							i.left.chevron.icon
						.pages.item data-bind="foreach: shoppersPages.showablePages"
							a.item data-bind="text: $data.num, click: $root.fetchShoppersPage"
						a.icon.item
							i.right.chevron.icon

script src="../javascripts/viewmodels/admin/shoppers.js"
