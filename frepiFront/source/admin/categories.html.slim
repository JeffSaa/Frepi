header
	h2 Categorias y subcategorias

section.content
	article
		h3 Categorias
		button.ui.green.create.category.button
			i.plus.icon
			|Agregar categoria
		table.ui.celled.categories.table
			thead
				tr
					th ID
					th Nombre
					th # subcat
					th Acciones
			tbody data-bind="foreach: currentCategories"
				tr
					td data-bind="text: $data.id"
					td data-bind="text: $data.name"
					td data-bind="text: $data.address"
					td
						i.bordered.inverted.blue.pencil.link.icon data-bind="click: $root.showUpdate"
						i.bordered.inverted.red.trash.link.icon data-bind="click: $root.showDelete"
			tfoot
				tr
					th colspan="4"
					/	.ui.right.floated.pagination.menu
					/		a.icon.item data-bind="click: setPrevCategoryPage"
					/			i.left.chevron.icon
					/		.pages.item data-bind="foreach: categoriesPages.showablePages"
					/			a.item data-bind="text: $data.num, click: $root.fetchCategoryPage"
					/		a.icon.item data-bind="click: setNextCategoryPage"
					/			i.right.chevron.icon
	article.subcategories
		h3 Subcategorias
		button.ui.green.create.subcategory.button
			i.plus.icon
			|Agregar subcategoria
		p
			strong Categoria
		.ui.selection.category.dropdown
			input name="categoryID" type="hidden"
			i.dropdown.icon
			.default.text Selecciona una...
			.menu data-bind="foreach: currentCategories"
				.item data-bind="attr: {'data-value': $data.id}"
					|<!--ko text: $data.name--><!--/ko-->
		table.ui.celled.subcategories.table
			thead
				tr
					th ID
					th Nombre
					th # productos
					th Acciones
			tbody data-bind="foreach: currentSubcategories"
				tr
					td data-bind="text: $data.id"
					td data-bind="text: $data.name"
					td data-bind="text: $data.address"
					td
						i.bordered.inverted.blue.pencil.link.icon data-bind="click: $root.showUpdateSubcategory"
						i.bordered.inverted.red.trash.link.icon data-bind="click: $root.showDeleteSubcategory"
			tfoot
				tr
					th colspan="4"
						/.ui.right.floated.pagination.menu
						/	a.icon.item data-bind="click: setPrevSubcategoryPage"
						/		i.left.chevron.icon
						/	.pages.item data-bind="foreach: subcategoriesPages.showablePages"
						/		a.item data-bind="text: $data.num, click: $root.fetchSubcategoryPage"
						/	a.icon.item data-bind="click: setNextSubcategoryPage"
						/		i.right.chevron.icon

