.ui.small.admin.delete.category.modal
	.header Eliminar Categoria
	.content
		p
			|Está a punto de eliminar la categoria&nbsp;
			strong data-bind="text: chosenCategory.name"
			|, ¿Desea hacerlo?
	.actions
		.ui.cancel.button
			i.remove.icon
			|No
		.ui.green.button data-bind="click: deleteCategory"
			i.check.icon
			|Si
.ui.small.admin.delete.subcategory.modal
	.header Eliminar Subcategoria
	.content
		p
			|Está a punto de eliminar la subcategoria&nbsp;
			strong data-bind="text: chosenSubcategory.name"
			|, ¿Desea hacerlo?
	.actions
		.ui.cancel.button
			i.remove.icon
			|No
		.ui.green.button data-bind="click: deleteSubcategory"
			i.check.icon
			|Si
.ui.small.admin.create.category.modal
	.header Crear Categoria
	.content
		form.ui.form data-bind="submit: createCategory"
			.field
				label Nombre
				input type="text" name="name" placeholder="Nombre"
			.buttons-to-right
				.ui.cancel.button Cancelar
				button.ui.labeled.green.submit.icon.button type="submit"
					|Crear Categoria
					i.checkmark.icon

.ui.small.admin.create.subcategory.modal
	.header Crear Subcategoria
	.content
		form.ui.form data-bind="submit: createSubcategory"
			.field
				label Nombre
				input type="text" name="name" placeholder="Nombre"
			.field
				label Categoria que pertenece
				.ui.fluid.selection.category.dropdown
					input name="categoryID" type="hidden"
					i.dropdown.icon
					.default.text Selecciona una...
					.menu data-bind="foreach: currentCategories"
						.item data-bind="attr: {'data-value': $data.id}"
							|<!--ko text: $data.name--><!--/ko-->
			.buttons-to-right
				.ui.cancel.button Cancelar
				button.ui.labeled.green.submit.icon.button type="submit"
					|Crear Subcategoria
					i.checkmark.icon

