<% if flash[:notice] %>
  <p><%= flash[:notice] %> </p>
<% end %>
<h1> Upload Products</h1>

<%= form_tag products_path, multipart: true do %>
  <%= file_field_tag :file %>
  <input type="hidden" name='uid' value= <%= params[:uid] %> />
  <input type="hidden" name='client' value= <%=  params[:client] %> />
  <input type="hidden" name='access-token' value= <%= params['access-token'] %> />
  <input type="hidden" name='provider' value= <%= params[:provider] %> />

  <%= submit_tag "Import" %>
<% end %>


<h2> Status</h2>
<%= text_area_tag 'logs', nil, rows: 30, cols: 120, disabled: true %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script type="text/javascript">
  function httpGet(theUrl) {
    $.ajax({url: theUrl, success: function(result){
        $("#logs").html(result);
    }});  
  }
  httpGet('http://ec2-54-68-79-250.us-west-2.compute.amazonaws.com:8080/products/logs');

  var retrievedObject = localStorage.getItem('userImport');
  console.log('retrievedObject: ', JSON.parse(retrievedObject));

</script>