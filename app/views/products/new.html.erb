<% if flash[:notice] %>
  <p><%= flash[:notice] %> </p>
<% end %>
<h1> Upload Products</h1>

<%= form_tag products_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>


<h2> Status</h2>
<%= text_area_tag 'logs', nil, rows: 30, cols: 120, disabled: true %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script type="text/javascript">
  function httpGet(theUrl) {
    $.ajax({url: theUrl, success: function(result){
        $("#logs").html(result);
    }});  
  }

  setInterval(function() {
    response = httpGet('http://localhost:3000/products/logs')
    
  }, 5000);


</script>